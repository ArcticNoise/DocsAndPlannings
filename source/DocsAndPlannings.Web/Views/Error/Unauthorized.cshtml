@model DocsAndPlannings.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Unauthorized";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-lock-fill text-info" style="font-size: 5rem;"></i>
                    </div>

                    <h1 class="display-4 mb-3">401</h1>
                    <h2 class="mb-4">@Model.Title</h2>

                    <p class="lead mb-4">@Model.Message</p>

                    @if (!string.IsNullOrEmpty(Model.Details))
                    {
                        <p class="text-muted mb-4">@Model.Details</p>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-light">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
