@model DocsAndPlannings.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                    </div>

                    <h1 class="display-4 text-danger mb-3">@Model.Title</h1>

                    @if (Model.StatusCode > 0)
                    {
                        <h3 class="text-muted mb-4">Error @Model.StatusCode</h3>
                    }

                    <p class="lead mb-4">@Model.Message</p>

                    @if (!string.IsNullOrEmpty(Model.Details))
                    {
                        <p class="text-muted mb-4">@Model.Details</p>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-light">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary me-2">
                            <i class="bi bi-house"></i> Go to Dashboard
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
