@model DocsAndPlannings.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-file-earmark-x text-warning" style="font-size: 5rem;"></i>
                    </div>

                    <h1 class="display-4 mb-3">404</h1>
                    <h2 class="mb-4">@Model.Title</h2>

                    <p class="lead mb-4">@Model.Message</p>

                    @if (!string.IsNullOrEmpty(Model.Details))
                    {
                        <p class="text-muted mb-4">@Model.Details</p>
                    }

                    <div class="mb-4">
                        <p class="text-muted">Here are some helpful links instead:</p>
                        <div class="d-flex flex-wrap justify-content-center gap-2">
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                            <a asp-controller="Documents" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-file-text"></i> Documents
                            </a>
                            <a asp-controller="Projects" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-folder"></i> Projects
                            </a>
                            <a asp-controller="WorkItems" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-list-task"></i> Work Items
                            </a>
                        </div>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-light mt-4">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
