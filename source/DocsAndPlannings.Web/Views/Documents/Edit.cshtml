@model DocsAndPlannings.Web.ViewModels.Documents.DocumentEditorViewModel
@{
    ViewData["Title"] = "Edit Document";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2><i class="bi bi-pencil-square"></i> Edit Document</h2>
                <p class="text-muted">@Model.Title <span class="badge bg-secondary">v@Model.CurrentVersion</span></p>
            </div>
            <div>
                <a asp-action="View" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-eye"></i> View
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CurrentVersion" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Version Control:</strong> Saving changes will create version @(Model.CurrentVersion + 1)
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter document title..." autofocus />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="ParentDocumentId" class="form-label"></label>
                            <select asp-for="ParentDocumentId" class="form-select">
                                <option value="">-- None (Root Document) --</option>
                                @foreach (var doc in Model.AvailableParentDocuments)
                                {
                                    <option value="@doc.Id">@doc.Title</option>
                                }
                            </select>
                            <span asp-validation-for="ParentDocumentId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label"></label>
                        <small class="text-muted">(Markdown supported)</small>
                        <textarea asp-for="Content" class="form-control font-monospace" rows="20"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="SelectedTagIds" class="form-label"></label>
                            <select asp-for="SelectedTagIds" class="form-select" multiple size="5">
                                @foreach (var tag in Model.AvailableTags)
                                {
                                    <option value="@tag.Id">@tag.Name</option>
                                }
                            </select>
                            <small class="text-muted">Hold Ctrl to select multiple tags</small>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mt-4">
                                <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                                <label asp-for="IsPublished" class="form-check-label"></label>
                                <small class="text-muted d-block">Published documents are visible to all users</small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a asp-action="View" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @* Markdown Reference Card *@
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Markdown Quick Reference</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Formatting</h6>
                        <ul class="list-unstyled font-monospace small">
                            <li># Heading 1</li>
                            <li>## Heading 2</li>
                            <li>**bold text**</li>
                            <li>*italic text*</li>
                            <li>`inline code`</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Lists & Links</h6>
                        <ul class="list-unstyled font-monospace small">
                            <li>- Bullet list item</li>
                            <li>1. Numbered list item</li>
                            <li>[Link text](URL)</li>
                            <li>![Image alt](image-url)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-expand textarea as content grows
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.querySelector('textarea[name="Content"]');
            if (textarea) {
                // Initial expansion based on existing content
                textarea.style.height = 'auto';
                textarea.style.height = (textarea.scrollHeight) + 'px';

                // Expand as user types
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            }
        });
    </script>
}
